{% schema %}
  {
  "name": "t:sections.slider-test.name",
  "tag": "section",
  "class": "section",
  "settings": [
    
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Imagen 1"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Imagen 2"
    }
  ,
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "t:sections.slider-test.presets.name"
    }
  ]
}
  
{% endschema %}

{% style %}
  .slider-test {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.imagen-test {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 1s ease-in-out;
}

.imagen-test.active {
  opacity: 1;
}
{% endstyle %}

