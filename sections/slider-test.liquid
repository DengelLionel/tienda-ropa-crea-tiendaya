<div class="slider">
  <div class="imagen active">
    {%- if section.settings.image1 != blank -%}
      <img src="{{ section.settings.image1 | img_url: '1000x' }}" alt="Imagen 1" loading="lazy">
    {%- else -%}
      {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
  </div>
  <div class="imagen">
    {%- if section.settings.image2 != blank -%}
      <img src="{{ section.settings.image2 | img_url: '1000x' }}" alt="Imagen 2" loading="lazy">
    {%- else -%}
      {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
  </div>
</div>

{% schema %}
  {
  "name": "t:sections.slider-test.name",
  "tag": "section",
  "class": "section",
  "settings": [
    
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Imagen 1"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Imagen 2"
    }
  ,
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "t:sections.slider-test.presets.name"
    }
  ]
}
  
{% endschema %}

{% style %}
  .contenedor {
  display: flex; 
}

.imagen {
  flex: 1; 
  max-width: 50%; 
}
{% endstyle %}

