<div id='text-bubble'>
  
</div>

{% style %}
  .text-bubble {
    background-color: red;
    width: 100px;
    height: 100px;
    display: none
  }
{% endstyle %}
{% javascript %}

  function ejecutarAccion() {
    const componente = document.getElementById('text-bubble')
    setTimeout(() => {
      componente.style.display = 'none'
    }, 5000)
  setTimeout(ejecutarAccion, 20000)
}

ejecutarAccion()
{% endjavascript %}
