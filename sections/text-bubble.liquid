<div id='text-bubble'>
  <div>
    <img src='' alt='product-show' />
  </div>
  <p></p>
</div>

{% style %}
  #text-bubble {
    background-color: black;
    color: white;
    display: none;
    position: fixed;
    z-index: 10;
    bottom: 15px;
    left: 15px;
    padding: 0 1rem;
  }

  #text-bubble > div {
    width: 100px
  }
  #text-bubble > div > img {
    width: 100%
  }
{% endstyle %}
{% javascript %}
  
const componente = document.getElementById('text-bubble');
const apiUrl = window.Shopify.routes.root + 'products.json';
  

  async function ejecutarAccion() {
  
      fetch(apiUrl)
      const response = await fetch(apiUrl);
        if (!response.ok) {
          throw new Error('No se pudo obtener la informaciÃ³n de los productos');
        }
        const data = await response.json();
        const numeroAleatorio = Math.floor(Math.random() * data.products.length);  
        componente.querySelector('p').innerText = data.products[numeroAleatorio].title
        componente.querySelector('div > img').src = data.products[numeroAleatorio].images[0].src
      
    componente.style.display = 'flex'
    setTimeout(() => {
      componente.style.display = 'none'
    }, 4000)
  setTimeout(ejecutarAccion, 10000)
}
  
if (componente) {
  setTimeout(() => {
    ejecutarAccion();
  }, 5000);
}
  
{% endjavascript %}
