<div id='text-bubble'>
  <div>
    <img src='' alt='product-show' />
  </div>
  <div>
    <p></p>
    <p></p>
    <p></p>
  </div>
</div>

{% style %}
  #text-bubble {
    background-color: black;
    color: white;
    display: none;
    position: fixed;
    z-index: 10;
    bottom: 15px;
    left: 15px;
    padding: 0 1rem;
    gap: 1rem;
    align-items: center;
    justify-content: center;
    height: auto;
    width: 350px;
    border-radius: 46.5px 5px 46.5px 5px 
  }

  #text-bubble > div:nth-of-type(1) {
    border-radius: 50%;
    width: 125px;
    height: auto;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  #text-bubble > div:nth-of-type(1) > img {
    width: 100%
  }
  #text-bubble > div:nth-of-type(2) {
    display: flex;
    justify-content: center;
    text-align: left;
    flex-direction: column
  }
  #text-bubble > div:nth-of-type(2) > p {
    margin: 0;
    padding: 0;
    font-family: normal;
    font-weight: 800;
    font-size: 15px;
  }

  #text-bubble > div:nth-of-type(2) > p:nth-of-type(1),
  #text-bubble > div:nth-of-type(2) > p:nth-of-type(3) {
    font-family: Montserrat;
    font-size:12px;
    font-weight: 0;
  }
{% endstyle %}
{% javascript %}
  
const componente = document.getElementById('text-bubble');
const apiUrl = window.Shopify.routes.root + 'products.json';
  

async function ejecutarAccion() {
  
    fetch(apiUrl)
    const response = await fetch(apiUrl);
      if (!response.ok) {
        throw new Error('No se pudo obtener la información de los productos');
      }
      const data = await response.json();
      const numeroAleatorio = Math.floor(Math.random() * data.products.length);  
      componente.querySelector('div:nth-of-type(1) > img').src = data.products[numeroAleatorio].images[0].src
      componente.querySelector('div:nth-of-type(2) > p:nth-of-type(2)').innerText = `Compró ${data.products[numeroAleatorio].title}`

      const esMes = Math.floor(Math.random() * 2) === 0;
        if (esMes) {
        const numeroMeses = Math.floor(Math.random() * 12);
        componente.querySelector('div:nth-of-type(2) > p:nth-of-type(3)').innerText = `hace ${numeroMeses} meses`
        } else {
        const numeroDias = Math.floor(Math.random() * 29);
        componente.querySelector('div:nth-of-type(2) > p:nth-of-type(3)').innerText = `hace ${numeroDias} días`  
        }
  
        componente.querySelector('div:nth-of-type(2) > p:nth-of-type(1)').innerText = 'Kuasi en asdsd'
      
    componente.style.display = 'flex'
    setTimeout(() => {
     //componente.style.display = 'none'
    }, 4000)
  setTimeout(ejecutarAccion, 10000)
}
  
if (componente) {
  setTimeout(() => {
    ejecutarAccion();
  }, 5000);
}
  
{% endjavascript %}
