{% style %}
  #text-bubble {
    background-color: black;
    color: white;
    display: flex;
    position: fixed;
    bottom: 15px;
    left: 15px;
    padding: 0 1rem;
  }
{% endstyle %}
{% javascript %}
  
const componente = document.getElementById('text-bubble');
const apiUrl = window.Shopify.routes.root + 'products.json';
  

  function ejecutarAccion() {
  
    fetch(apiUrl)
      .then((response) => response.json())
      .then((data) => {
        const numeroAleatorio = Math.floor(Math.random() * data.products.length);            
        componente.querySelector('p').innerText = data.products[0].title

      })
      .catch((error) => {
      console.error('Error al obtener informaciÃ³n de los productos:', error);
      });
    componente.style.display = 'flex'
    setTimeout(() => {
      componente.style.display = 'none'
    }, 4000)
  setTimeout(ejecutarAccion, 10000)
}
  
if (componente) {
  setTimeout(() => {
    ejecutarAccion();
  }, 5000);
}
  
{% endjavascript %}
